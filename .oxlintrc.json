{
    "extends": [
        "oxlint:recommended",
        "oxlint:typescript",
        "oxlint:react",
        "oxlint:jsx-a11y",
        "oxlint:import"
    ],
    "rules": {
        // --- General Safety & Correctness ---
        "no-debugger": "error",
        "no-var": "error",
        "prefer-const": "error",
        "eqeqeq": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "no-implicit-coercion": "error",
        "no-alert": "error",
        "no-throw-literal": "error",
        "no-return-assign": "error",
        "no-useless-return": "error",
        "no-shadow": "error",
        "no-undef-init": "error",
        "no-empty-function": "error",
        "no-param-reassign": [
            "error",
            {
                "props": true
            }
        ],
        "no-multi-assign": "error",
        "no-redeclare": "error",
        "no-magic-numbers": [
            "warn",
            {
                "ignore": [
                    0,
                    1,
                    -1
                ],
                "ignoreArrayIndexes": true
            }
        ],
        "require-await": "error",
        "consistent-return": "error",
        "default-case": "error",
        "prefer-arrow-callback": "error",
        "prefer-template": "error",
        "prefer-object-spread": "error",
        // --- Code Style & Readability ---
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "no-trailing-spaces": "error",
        "eol-last": [
            "error",
            "always"
        ],
        "max-len": [
            "warn",
            {
                "code": 100,
                "ignoreUrls": true,
                "ignoreStrings": true
            }
        ],
        "no-nested-ternary": "error",
        "no-unneeded-ternary": "error",
        // --- TypeScript Strictness ---
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/no-non-null-assertion": "error",
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "@typescript-eslint/no-inferrable-types": "off", // Let TS infer; only warn if redundant
        "@typescript-eslint/no-floating-promises": "error",
        "@typescript-eslint/strict-boolean-expressions": "error",
        "@typescript-eslint/consistent-type-imports": [
            "error",
            {
                "prefer": "type-imports"
            }
        ],
        "@typescript-eslint/prefer-readonly": "error",
        "@typescript-eslint/array-type": [
            "error",
            {
                "default": "array-simple"
            }
        ],
        "@typescript-eslint/ban-ts-comment": [
            "error",
            {
                "ts-ignore": "allow-with-description"
            }
        ],
        "@typescript-eslint/no-empty-interface": "error",
        "@typescript-eslint/prefer-nullish-coalescing": "error",
        "@typescript-eslint/switch-exhaustiveness-check": "error",
        "@typescript-eslint/unified-signatures": "error",
        // --- React/Solid/Astro (keep only if relevant) ---
        "react/react-in-jsx-scope": "off", // Not needed for modern React/Solid
        "react/jsx-uses-react": "off",
        "react/prop-types": "off", // TS enforces types
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "error",
        "react/no-unstable-nested-components": "warn",
        "react/jsx-no-useless-fragment": "error",
        // --- Imports & Module Hygiene ---
        "import/no-unresolved": "error",
        "import/no-duplicates": "error",
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "newlines-between": "always"
            }
        ],
        "import/newline-after-import": "error",
        "import/no-cycle": [
            "error",
            {
                "maxDepth": 1
            }
        ],
        "import/no-extraneous-dependencies": "error",
        "import/no-mutable-exports": "error",
        // --- Accessibility ---
        "jsx-a11y/alt-text": "error",
        "jsx-a11y/no-autofocus": "error",
        "jsx-a11y/no-redundant-roles": "warn",
        "jsx-a11y/anchor-is-valid": "error",
        // --- Performance & Security ---
        "no-promise-executor-return": "error",
        "no-template-curly-in-string": "error",
        "no-unmodified-loop-condition": "error",
        "no-unsafe-finally": "error",
        "no-unreachable-loop": "error",
        "no-self-compare": "error"
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "build/",
        "coverage/",
        "*.config.js",
        "*.config.ts"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es2022": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2022,
        "ecmaFeatures": {
            "jsx": true
        }
    }
}